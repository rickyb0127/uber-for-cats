<div class="page-header">
  <h1>Trips For <%= current_user.username %></h1>
</div>

<%= link_to "Create New Appointment", new_appointment_path %>

<h1>Active Appointments</h1>
<table class="table">
  <thead>
    <th>Pick Up Location</th>
    <th>Drop Off Location</th>
    <th>Pick Up Time Requested</th>
    <th>Estimated Pickup Time</th>
    <th>Driver Info</th>
    <th>Cancel Pickup</th>
  </thead>

  <tbody>
    <% @current_appointments.each do |appointment| %>
    <tr>
      <td><%= appointment.pickup_location %></td>
      <td><%= appointment.dropoff_location %></td>
      <td><%= appointment.pickup_time.strftime("%-I:%M %p") %></td>
      <td><%= appointment.est_pickup.strftime("%-I:%M %p") %></td>
      <td><%= appointment.driver.username %> in a <%= appointment.driver.car.full_car %></td>
      <td><%= link_to "Cancel", (appointment), method: :delete, class: "btn btn-danger" %></td>
    </tr>
    <% end %>

  </tbody>
</table>

<h1>Past Appointments</h1>
<table class="table">
  <thead>
    <th>Pick Up Location</th>
    <th>Drop Off Location</th>
    <th>Driver Name</th>
    <th>Rate Driver</th>
  </thead>

  <tbody>
    <% @completed_appointments.each do |appointment| %>
    <tr>
      <td><%= appointment.pickup_location %></td>
      <td><%= appointment.dropoff_location %></td>
      <td><%= appointment.driver.username %></td>
      <td></td>
    </tr>
    <% end %>

  </tbody>
</table>
